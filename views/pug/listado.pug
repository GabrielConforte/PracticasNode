html 
    head    
        title Listado desde Pug
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css')
    body
        table(class="table table-striped table-dark m-auto")
            tr
                th(scope="col")| Nombre
                th(scope="col")| Precio
                th(scope="col")| URL
            
            each i in productos
                tr
                    th=i.title
                    th=i.price
                    th
                        img(width="50px" src=i.thumbnail)
    div(class="container mt-2 d-flex flex-column align-items-center")
        a(class="btn btn-primary" href="/")| Volver